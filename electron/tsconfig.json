{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "../build/electron",
    "rootDir": ".",
    "sourceMap": true,
    "types": ["node", "electron"],
    "resolveJsonModule": true,
    "allowJs": true,
    "declaration": false,
    "noImplicitAny": false
  },
  "include": [
    "*.ts"
  ],
  "exclude": [
    "node_modules",
    "../build",
    "../src"
  ]
} 